generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  pseudo         	  String
  email             String   @unique
  encryptedPassword String
  level            	Level    @default(DEBUTANT)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  notif				      Notif    @default(NO)
}

model Spot {
  id         Int      @id @default(autoincrement())
  level	     Level	  @default(DEBUTANT)
  adress	   String
  infos		   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Commentaire {
  id         Int      @id @default(autoincrement())
  content	   String
  note		   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  spotId	   Int
  userId	   Int
}

model Signal {
  id         Int      @id @default(autoincrement())
  content	   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  spotId	   Int
  userId	   Int
}

enum Level {
  DEBUTANT
  AMATEUR
  EXPERT
  PRO
}

enum Notif {
  YES
  NO
}
